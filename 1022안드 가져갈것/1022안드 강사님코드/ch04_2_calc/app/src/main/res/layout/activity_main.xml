<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableRow>
        <EditText
            android:id="@+id/edt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="5"
            android:hint="여기에 값을 입력하세요!"/>
    </TableRow>
    <TableRow>
        <EditText
            android:id="@+id/edt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="5"
            android:hint="여기에 값을 입력하세요!"/>

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn00"
            android:layout_weight="1"
            android:text="0" />

        <Button
            android:id="@+id/btn01"
            android:layout_weight="1"
            android:text="1" />

        <Button
            android:id="@+id/btn02"
            android:layout_weight="1"
            android:text="2" />

        <Button
            android:id="@+id/btn03"
            android:layout_weight="1"
            android:text="3" />

        <Button
            android:id="@+id/btn04"
            android:layout_weight="1"
            android:text="4" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn05"
            android:layout_weight="1"
            android:text="5" />

        <Button
            android:id="@+id/btn06"
            android:layout_weight="1"
            android:text="6" />

        <Button
            android:id="@+id/btn07"
            android:layout_weight="1"
            android:text="7" />

        <Button
            android:id="@+id/btn08"
            android:layout_weight="1"
            android:text="8" />

        <Button
            android:id="@+id/btn09"
            android:layout_weight="1"
            android:text="9" />
    </TableRow>


    <TableRow>

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="5"
            android:layout_weight="1"
            android:text="더하기" />

    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="5"
            android:layout_weight="1"
            android:text="빼기" />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="5"
            android:layout_weight="1"
            android:text="곱하기" />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="5"
            android:layout_weight="1"
            android:text="나누기" />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="5"
            android:layout_weight="1"
            android:text="나머지" />
    </TableRow>
    <TableRow>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="5"
            android:layout_weight="1"
            android:text="계산 결과: "
            android:textColor="#ff0000"
            android:textSize="20sp" />
    </TableRow>
</TableLayout>
